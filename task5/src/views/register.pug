html
  head
    title Authentication demo
  body
    h1 Register
    div
      h2 User registration
      form(action="/register" method="post")
        div
          label Login:
          input(name="login" type="text")
        div
          label Password:
          input(name="password" type="password")
        div
          input(type="submit" value="Register")

      div
        span=message
      div
        a(href="/") Back
